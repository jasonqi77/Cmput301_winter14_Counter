<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.conter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.conter.CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name="com.example.conter.LoadActivity"
            android:label="@string/title_activity_load" >
        </activity>
        <activity
            android:name="com.example.conter.CounterActivity"
            android:label="@string/title_activity_counter" >
        </activity>
        <activity
            android:name="com.example.conter.RenameActivity"
            android:label="@string/title_activity_rename" >
        </activity>
        <activity
            android:name="com.example.conter.SummaryActivity"
            android:label="@string/title_activity_summary" >
        </activity>
        <activity
            android:name="com.example.conter.DeleteActivity"
            android:label="@string/title_activity_delete" >
        </activity>
    </application>

</manifest>
